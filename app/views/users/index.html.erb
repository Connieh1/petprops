<%= render 'shared/page_title', title: "All Users" %>
<div align="center">
	<%= will_paginate %>
</div>
<div align="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li class="user-title"><%= link_to user.name.capitalize, user_path(user) %></li>
					<li><small><%= pluralize(user.posts.count, "post") if user.posts %></small></li>
					<% if logged_in? && current_user.admin? && !user.admin? %>
					<li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all associated posts?"} %></li>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
</div>
<div align="center">
	<%= will_paginate %>
</div>


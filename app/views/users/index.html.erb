<%= render 'shared/page_title', title: "List All Users" %>

<div slign="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li class="user-title"><%= link_to user.name.capitalize, user_path(user) %></li>
					<li><small><%= pluralize(user.posts.count, "post") if user.posts %></small></li>
				</div>
			</div>
		</ul>
	<% end %>
</div>

<%= render 'shared/page_title', title: @post.title %>


<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong><%= @post.pet.name %> <br> <%= @post.pet.species %>:  <%= (@post.pet.breed) %></strong></h4>
<hr> 
<%= simple_format(@post.content) %>
<hr>
<div class="pull-right">
  <p class="center">
  	<em> Created by: </em>
  </p>
  
  <p>
  	<small><%= @post.user.name %></small>
  	<div class="pull-right">
        <%= time_ago_in_words(@post.created_at) %> ago
     </div>
   </p>
 </div>
</div>

<%= link_to "Edit Post", edit_post_path(@post) %> <br>
<%= link_to "Delete Post", post_path(@post), method: :delete,
                            data: {confirm: "Are you sure you want to delete this post?"}%><br>
<%= link_to "Return to Posts Listings", posts_path %>
